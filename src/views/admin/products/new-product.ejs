<%- include('../../shared/includes/head', { pageTitle: 'New Product' }) %>
<link rel="stylesheet" href="/styles/forms.css">
</head>
<body>
<%- include('../../shared/includes/header') %>
<main>
  <h1>Add New Product</h1>
  <form action="/admin/products?_csrf=<%= locals.csrfToken %>" method="post" enctype="multipart/form-data">
    <p>
      <label for="title">Title</label>
      <input type="text" id="title" name="title" required>
    </p>
    <p>
      <label for="summary">Summary</label>
      <input type="text" id="summary" name="summary" required>
    </p>
    <p>
      <label for="description">Description</label>
      <textarea id="description" name="description" rows="7"></textarea>
    </p>
    <p>
      <label for="price">Price</label>
      <input type="number" id="price" name="price" step="0.01" min="0.01" required>
    </p>
    <p>
      <label for="product-image">Image</label>
      <input type="file" id="product-image" name="product-image" accept="image/png, image/jpg" required>
    </p>
    <p>
      <button type="reset" class="btn btn-alt">Reset</button>
      <button type="submit" class="btn">Save</button>
    </p>
  </form>
</main>
<%- include('../../shared/includes/footer') %>
