<article class="cart-item">
  <div class="cart-item-info">
    <h2><%= cartItem.product.title %></h2>
    <p>
      €<span class="cart-item-price"><%= cartItem.totalPrice.toFixed(2) %></span>
      <span class="cart-product-price">(€<%= cartItem.product.price.toFixed(2) %>)</span>
    </p>
  </div>
  <form class="car-item-management" data-csrf="<%= locals.csrfToken %>" data-productid="<%= cartItem.product.id %>">
    <input type="number" value="<%= cartItem.quantity %>" required>
    <button class="btn btn-alt">Update</button>
  </form>
</article>
